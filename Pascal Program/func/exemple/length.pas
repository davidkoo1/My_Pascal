var
  s : string;
  x : integer;

begin
  writeln('Input string ');
  readln(s);
  x:=length(s);
  if x mod 2 = 1 then delete(s,(x div 2)+1,1)   //*************
  else                                         //     (x div 2) - середина строки
      delete(s,(x div 2),2);                  //***************
  writeln(s);
  readln;
end.
